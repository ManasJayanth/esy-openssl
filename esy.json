{
  "name": "esy-openssl",
  "version": "1.1.1000-t",
  "description": "openssl packaged for esy",
  "source": "https://www.openssl.org/source/openssl-1.1.1t.tar.gz#sha256:8dee9b24bdb1dcbf0c3d1e9b02fb8f6bf22165e807f45adeb7c9677536859d3b",
  "override": {
    "build": [
      [
        "./Configure",
        "--prefix=#{self.install}",
        "--openssldir=#{self.lib / 'ssl'}",
        "#{os == 'windows' ? 'mingw64': 'cc'}",
        "#{os == 'windows' ? '--cross-compile-prefix=x86_64-w64-mingw32-': '--cross-compile-prefix=' }",
        "no-zlib"
      ],
      "make -j#{self.jobs}"
    ],
    "install": [
      [
        "make",
        "install"
      ]
    ],
    "buildsInSource": true,
    "exportedEnv": {
      "LD_LIBRARY_PATH": {
        "val": "#{self.lib : $LD_LIBRARY_PATH}",
        "scope": "global"
      },
      "OPENSSL_LIB_PATH": {
        "val": "#{self.lib}",
        "scope": "global"
      },
      "OPENSSL_INCLUDE_PATH": {
        "val": "#{self.install / 'include'}",
        "scope": "global"
      },
      "OPENSSL_BIN_PATH": {
        "val": "#{self.bin}",
        "scope": "global"
      },
      "PKG_CONFIG_PATH": {
        "val": "#{self.lib / 'pkgconfig'}",
        "scope": "global"
      }
    },
    "dependencies": {}
  }
}
